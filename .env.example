# App
APP_ENV=dev
LOG_DB_PATH=./usage_logs.sqlite
HARD_TIMEOUT_S=20
ENABLE_REQUEST_LOGGING=true

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE-NAME.openai.azure.com
AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_KEY
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Deployments are your Azure OpenAI deployment names
AZURE_DEPLOYMENT_LOW_COST=gpt-4o-mini
AZURE_DEPLOYMENT_HIGH_QUALITY=gpt-4o
AZURE_DEPLOYMENT_LOW_LATENCY=gpt-4o-mini

# AWS / Bedrock
AWS_REGION=eu-west-2
# Make sure your AWS credentials are configured via environment or ~/.aws/credentials
# e.g. AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_SESSION_TOKEN (if needed)

# Bedrock model ids (examples - pick what you have enabled)
BEDROCK_MODEL_LOW_COST=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MODEL_HIGH_QUALITY=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_MODEL_LOW_LATENCY=anthropic.claude-3-haiku-20240307-v1:0

# Cost model (approx - tune to your actual pricing)
AZURE_COST_PER_1K_INPUT_USD=0.00015
AZURE_COST_PER_1K_OUTPUT_USD=0.00060
BEDROCK_COST_PER_1K_INPUT_USD=0.00025
BEDROCK_COST_PER_1K_OUTPUT_USD=0.00125
